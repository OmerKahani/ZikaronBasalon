<% title "Cities" %>

<table>
  <tr>
    <th>Name</th>
    <th>Manager</th>
  </tr>
  <% for city in @cities %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.manager_email %></td>
      <td><%= button_to 'Delete', city, method: :delete, data: { confirm: 'אתה בטוח?' } %></td>
    </tr>
  <% end %>
</table>

