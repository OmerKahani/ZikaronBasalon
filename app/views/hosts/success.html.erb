	<div class="text">
		<%= t '.exp1' %>
	</div>

	<div class="box">
		<h1><%= t '.box_title1' %></h1>
		<div class="square">
			<%= image_tag "download.png" %>
			<h2><%= t '.download_title' %></h2>
			<div class="text">
				<%= t '.download_text' %>
				<%= link_to(t('.download_text1'),"http://zikaronbasalon.herokuapp.com/kit/host_kit.pdf") %>,
