<% title "#{@host.f_name} #{@host.l_name}" %>


<div id="edit_host_container">
  <%= form_for @host, html: {class: "form-horizontal"} do |f| %>
    <% if session[:auth] == "extended"  %>
     <div class="control-group">
        <%= f.label :f_name, "שם פרטי", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :f_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :l_name, "שם משפחה", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :l_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, "Email", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :phone, "טלפון", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :phone %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :address, "כתובת הסלון", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :city_name, "עיר", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :city_name, data: {autocomplete_source: City.order(:name).map(&:name)} %>
        </div>
      </div>
    <% end %>

    <div class="control-group">
        <%= f.label :contact, "איש קשר", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :contact %>
        </div>
    </div>


      <div class="control-group">
       <%= f.label :survivor_needed, "זקוק לעזרה במציאת איש עדות?", class: "control-label" %>
      <div class="controls">
        <%= f.select :survivor_needed,options_for_select(["צריך","לא צריך","נשלח"]), prompt: "בחר/י" %>
      </div>
    </div>

    <div class="control-group">
        <div class="controls">
          <%= f.text_area :survivor_details, placeholder: "עוד משהו שאנחנו צריכים לדעת?" %>
        </div>
    </div>


     <div class="control-group">
       <%= f.label :strangers, "מוכן לארח זרים", class: "control-label" %>
      <div class="controls">
        <%= f.select :strangers,[['מוכן', true], ['לא מוכן', false]], prompt: "בחר/י" %>
      </div>
    </div>


    <div class="control-group">
        <div class="controls">
          <%= f.text_area :free_text, placeholder: "עוד משהו שאנחנו צריכים לדעת?" %>
        </div>
    </div>

    <div class="control-group inline">
      <div class="controls">
        <%= f.submit "עדכן/י", class: "host_submit" %>
      </div>
    </div>

    <% if session[:auth] == "extended" %>
      <div class="control-group inline">
        <div class="controls">
         <%= link_to 'מחק', host_path(@host),
                        method: :delete, data: { confirm: 'אתה בטוח?' }, class: "host_delete" %>
        </div>
      </div>
    <% end %>

  <% end %>
</div>
