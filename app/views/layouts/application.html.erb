    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div id="container">
      <%= yield %>
      <div id="footer">
        Developed by Uri Klar
        <%= link_to image_tag("linkdin.jpg"), "http://www.linkedin.com/in/uriklar", target: "_blank" %>
        <div class="footer_wrapper">

        </div>
      </div>
    </div>
  </body>
</html>
