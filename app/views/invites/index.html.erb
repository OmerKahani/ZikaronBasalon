<% title "Invites" %>

<table id="staff_table">
  <tr>
    <th>עיר</th>
    <th>אורח</th>
    <th>מייל אורח</th>
    <th>מארח</th>
    <th>מייל מארח</th>
    <th>סטטוס</th>
  </tr>
  <% for invite in @invites %>
    <tr>
      <td><%= invite.host.city_name %></td>
      <td><%= invite.guest.name %></td>
      <td><%= invite.guest.email %></td>
      <td><%= invite.host.full_name %></td>
      <td><%= invite.host.email %></td>
      <td><%= invite.confirmed ? "מאושר" : "ממתין לאישור" %></td>
    </tr>
  <% end %>
</table>