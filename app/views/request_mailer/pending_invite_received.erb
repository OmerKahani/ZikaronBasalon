<h1><%= @host.user.first_name %></h1>

<p>
	<%= t '.paragraph_1', guest_name: @guest.user.first_name, locale: @locale %>
</p>


<table class="table">
  <tr>
    <th><%= t 'hosts.show.labels.name', locale: @locale %></th>
    <th><%= t 'hosts.show.labels.phone', locale: @locale %></th>
    <th><%= t 'hosts.show.labels.email', locale: @locale %></th>
    <th><%= t 'hosts.show.labels.how_many_places', locale: @locale %></th>
  </tr>

  <tr>
    <td><%= @guest.user.full_name %></td>
    <td><%= @guest.phone %> </td>
    <td><%= @guest.user.email %></td>
    <td><%= @invite.plus_ones + 1 %> </td>
  </tr>
</table>

<p>
	<%= t '.ok_for_you', locale: @locale %> 
  <%= link_to t('.approve_request', locale: @locale), host_url(id:@host.id, locale: @locale) %>
  <%= t '.ok_for_you_cont', guest_name: @guest.user.first_name, locale: @locale %> 
  <%= link_to t('.profile_link', locale: @locale), host_url(id:@host.id, locale: @locale) %>
</p>

<p>
	<%= t '.paragraph_2', locale: @locale %> <%= link_to t('.your_profile', locale: @locale), host_url(id:@host.id, locale: @locale) %>
</p>

<p>
	<%= t '.paragraph_3', locale: @locale %>
</p>