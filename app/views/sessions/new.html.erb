<div class="container_inner">
	<div class="title">
    <%= t '.title' %>
  </div>

	<%= form_for(:session, url: sessions_path, html: {class: "new_session_form"}) do |f| %>
		<div class="control-group">
      <%= f.label :email, t('hosts.new.email'), class: "control-label" %>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :phone, t('hosts.new.phone'), class: "control-label" %>
      <div class="controls">
        <%= f.text_field :phone %>
      </div>
    </div>

    <div class="control-group">
	    <div class="controls">
	      <%= f.submit t('hosts.new.submit'), class: "host_submit" %>
	    </div>
  	</div>
	<% end %>
</div>